{
  "name": "vscode-dotnet-watch",
  "displayName": ".NET Watch",
  "description": "Dotnet watch with automatic debugger attach",
  "version": "1.1.9",
  "publisher": "Murugaratham",
  "engines": {
    "vscode": "^1.94.0",
    "node": "^20",
    "npm": "^8"
  },
  "extensionDependencies": [
    "ms-dotnettools.csharp"
  ],
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "keywords": [
    "C#",
    "multi-root ready",
    "dotnet watch"
  ],
  "icon": "images/watch-debug.png",
  "contributors": [
    {
      "name": "Dennis Jung"
    },
    {
      "name": "Konrad MÃ¼ller"
    },
    {
      "name": "Murugaratham"
    },
    {
      "name": "John Mitchell-Grant",
      "url": "https://github.com/johnmgrant"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/murugaratham/vscode-dotnet-watch/"
  },
  "bugs": {
    "url": "https://github.com/murugaratham/vscode-dotnet-watch/issues"
  },
  "homepage": "https://github.com/murugaratham/vscode-dotnet-watch",
  "activationEvents": [
    "onDebug",
    "onLanguage:csharp"
  ],
  "main": "./dist/extension",
  "contributes": {
    "debuggers": [
      {
        "type": "DotNetWatch",
        "label": ".NET Watch",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "args": {
                "type": "array",
                "description": "Command line arguments passed to the program.",
                "items": {
                  "type": "string"
                },
                "default": []
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Environment variables passed to the program.",
                "default": {}
              },
              "taskName": {
                "type": "string",
                "description": "The task to start the project, bypass the quick pick menu.",
                "default": ""
              },
              "project": {
                "type": "string",
                "description": "The project to start, bypass the quick pick menu.",
                "default": ""
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": ".NET: Watch Debug (dotnet-watch)",
            "description": "A new configuration for launching .NET watch",
            "body": {
              "type": "DotNetWatch",
              "request": "launch",
              "name": ".NET Core Watch",
              "args": [],
              "taskName": "",
              "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
              }
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:package": "vsce package",
    "vscode:prepublish": "yarn compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn compile",
    "test": "node ./dist/test/runTest.js",
    "lint": "eslint '*/**/*.{ts,js}'",
    "prepare": "husky install",
    "commit": "cz",
    "release": "standard-version --skip.commit"
  },
  "dependencies": {
    "typescript-collections": "^1.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.7.5",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vscode/vsce": "^3.1.1",
    "commitizen": "^4.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "standard-version": "^9.5.0",
    "tslint": "^6.1.3",
    "typescript": "5.6.3",
    "vscode-test": "^1.6.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --quiet --ext js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
